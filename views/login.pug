html
  head
    title Login Page
    link(rel="stylesheet", href="/styles.css")

  body
    h1#login-title Login
    form#login-form(action="/account/login", method="post")
      label#username-label(for='username') Username:
      input#username-input(type='text', name='username', required)
      br
      label#password-label(for='password') Password:
      input#password-input(type='password', name='password', required)
      if error
        p#error= errortype
      br
      input#login-button(type='submit', value='Login')
    p#register-link Don't have an account? 
      a(href="/account/register") Register here
