html
  head
    title Register Page
    link(rel="stylesheet", href="/styles.css")

  body
    h1#register-title Register
    form#register-form(action="/account/register", method="post")
      label#username-label(for='username') Username:
      input#username-input(type='text', name='username', required)
      br
      label#password-label(for='password') Password:
      input#password-input(type='password', name='password', required)
      if error
        p#error= errortype
      br
      input#register-button(type='submit', value='Register')
    p#login-link Already have an account? 
      a(href="/account/login") Login here
